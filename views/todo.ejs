<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo list</title>
</head>
<link rel="preconnect" href="https://fonts.gstatic.com">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
<link href="https://fonts.googleapis.com/css2?family=Ubuntu&display=swap" rel="stylesheet">
<link rel="stylesheet" href="/todo.css">

<body>
    <nav>
        <form method="GET" action="/logout"><button type="submit">LogOut</button></form>
    </nav>
    <div class="container">
        <div class="days">
            <div class="day thediv">Daya</div>
            <div class="week thediv">Week</div>
            <div class="month thediv">Month</div>
            <div class="year thediv">Year</div>
        </div>
        <div class="display-day">
            <div class="displayday">Day</div>
            <div class="displaydate">Date</div>
        </div>
        <div class="addtask">
            <form id="form" method="POST" action="/todo/add">
                <input type="text" class="text" id="todoInput" placeholder="Add a task..." name="todo">
            </form>
        </div>
        <div class="task">
            <% list.forEach(element => { %>
                <div class="tsk">

                    <span class="checkbox"><input type="checkbox" name="todoncheck" id="todoncheck"></span>
                    <div class="tododesc">
                        <%=element.todo%>
                    </div>

                    <form method="POST" action="/todo/delete?id=<%= element._id %>" id="form2">
                        <button type="submit"><i class="bi bi-trash trash"></i></button>
                    </form>
                </div>

                <% }) %>
        </div>
    </div>
</body>
<script src="/todo.js"></script>

</html>